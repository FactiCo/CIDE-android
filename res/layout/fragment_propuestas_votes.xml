<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cide="http://schemas.android.com/apk/res/mx.com.factico.cide"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_bgr_gradient_dark"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/drawable_bgr_rounded_white"
        android:orientation="horizontal"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/propuestas_votes_iv_userphoto"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/propuesta_name"
            android:scaleType="centerInside"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <mx.com.factico.cide.views.CustomScrollView
                android:id="@+id/propuestas_votes_sv_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:scrollbarThumbVertical="@drawable/drawable_customscroll" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="10dp" >

                        <mx.com.factico.cide.views.CustomTextView
                            android:id="@+id/propuestas_votes_tv_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingBottom="5dp"
                            android:text=""
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/title_color"
                            cide:typefaceRoboto="SourceSansPro_Light" />

                        <mx.com.factico.cide.views.CustomTextView
                            android:id="@+id/propuestas_votes_tv_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingBottom="5dp"
                            android:text=""
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/title_color"
                            cide:typefaceRoboto="RobotoSlab_Bold" />

                        <include
                            android:id="@+id/propuestas_votes_wv_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            layout="@layout/webview" />
                    </LinearLayout>

                    <mx.com.factico.cide.views.CustomTextView
                        android:id="@+id/propuestas_votes_tv_vote_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text="@string/propuestas_vote"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/title_color"
                        cide:typefaceRoboto="SourceSansPro_Regular" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_vertical_margin"
                        android:background="@color/white"
                        android:divider="@drawable/divider_vertical_white"
                        android:orientation="horizontal"
                        android:padding="2dp"
                        android:showDividers="middle" >

                        <ImageView
                            android:id="@+id/propuestas_votes_btn_favor"
                            style="?android:attr/buttonBarButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:background="@drawable/selector_btn_votes_favor"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_propuestas_votos_favor"
                            android:contentDescription="@string/propuesta_name" />

                        <ImageView
                            android:id="@+id/propuestas_votes_btn_abstencion"
                            style="?android:attr/buttonBarButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:background="@drawable/selector_btn_votes_abstencion"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_propuestas_votos_abstencion"
                            android:contentDescription="@string/propuesta_name" />
                        
                        <ImageView
                            android:id="@+id/propuestas_votes_btn_contra"
                            style="?android:attr/buttonBarButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:background="@drawable/selector_btn_votes_contra"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_propuestas_votos_contra"
                            android:contentDescription="@string/propuesta_name" />
                    </LinearLayout>

                    <mx.com.factico.cide.views.CustomTextView
                        android:id="@+id/propuestas_votes_tv_votes_same"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="@dimen/activity_vertical_margin"
                        android:text="@string/propuestas_votes_same"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/title_color"
                        cide:typefaceRoboto="SourceSansPro_Regular"
                        android:visibility="gone" />
                    
                    <mx.com.factico.cide.views.CustomTextView
                        android:id="@+id/propuestas_votes_tv_question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="@dimen/activity_vertical_margin"
                        android:text=""
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/title_color"
                        cide:typefaceRoboto="SourceSansPro_Regular" />

                    <LinearLayout
                        android:id="@+id/propuestas_votes_vg_answers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_vertical_margin"
                        android:background="@color/white"
                        android:divider="@drawable/divider_vertical_white"
                        android:orientation="horizontal"
                        android:padding="2dp"
                        android:showDividers="middle" />

                    <mx.com.factico.cide.views.CustomTextView
                        android:id="@+id/propuestas_votes_btn_answers_vermas"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_btn_ligth"
                        android:gravity="center"
                        android:text="@string/propuestas_btn_comments_vermas"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/white"
                        android:visibility="gone"
                        cide:typefaceRoboto="SourceSansPro_Regular" />
                </LinearLayout>
            </mx.com.factico.cide.views.CustomScrollView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>