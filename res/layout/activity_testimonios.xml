<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/actionbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/default_background_color"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/testimonios_iv_logo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_background_gradient"
                    android:contentDescription="@string/testimonio_name"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:src="@drawable/ic_launcher" />

                <LinearLayout
                    android:id="@+id/testimonios_vg_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/default_background_color"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:showDividers="middle" >

                    <TextView
                        android:id="@+id/testimonios_title"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/lorem_ipsum_title"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/title_color"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/testimonios_desciption"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:maxLines="4"
                        android:text="@string/lorem_ipsum_description"
                        android:textColor="@color/default_text_color" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/testimonios_vg_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@color/accent"
                    android:divider="@drawable/divider_horizontal"
                    android:dividerPadding="12dip"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:showDividers="middle" />
            </LinearLayout>

            <Button
                android:id="@+id/testimonios_btn_addtestimonio"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:text="+"
                android:background="@drawable/selector_btn_circle" />
        </FrameLayout>
    </ScrollView>

</LinearLayout>