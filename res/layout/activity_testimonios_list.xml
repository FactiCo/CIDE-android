<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_bgr_gradient_dark"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/actionbar" />

    <FrameLayout
        android:id="@+id/actiobarShadow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?android:windowContentOverlay"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:scrollbarThumbVertical="@drawable/drawable_customscroll" >

            <LinearLayout
                android:id="@+id/testimonios_list_vg_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/drawable_bgr_rounded_white"
                android:divider="@drawable/divider_horizontal_green"
                android:foreground="?android:windowContentOverlay"
                android:orientation="vertical"
                android:showDividers="middle" >
                
                <ProgressBar
                    android:id="@+id/testimonios_list_loading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone" />
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

</LinearLayout>