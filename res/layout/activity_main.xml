<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accent_ligth"
    android:divider="@drawable/divider_horizontal"
    android:dividerPadding="12dip"
    android:orientation="vertical"
    android:showDividers="middle" >

    <Button
        android:id="@+id/main_btn_option1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/selector_btn_dark"
        android:shadowColor="@color/white"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="10"
        android:text="@string/main_menu_option1"
        android:textColor="@color/primary_color"
        android:textStyle="bold" />

    <Button
        android:id="@+id/main_btn_option2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/selector_btn_dark"
        android:shadowColor="@color/white"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="10"
        android:text="@string/main_menu_option2"
        android:textColor="@color/primary_color"
        android:textStyle="bold" />

    <Button
        android:id="@+id/main_btn_option3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/selector_btn_dark"
        android:shadowColor="@color/white"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="10"
        android:text="@string/main_menu_option3"
        android:textColor="@color/primary_color"
        android:textStyle="bold" />

</LinearLayout>