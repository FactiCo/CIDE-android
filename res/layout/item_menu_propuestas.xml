<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cide="http://schemas.android.com/apk/res/mx.com.factico.cide"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/item_propuestas_menu_vg_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@drawable/selector_btn_white" >

        <ImageView
            android:id="@+id/item_propuestas_menu_iv_user"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_launcher"
            android:scaleType="centerInside"
            android:contentDescription="@string/propuesta_name" />

        <mx.com.factico.cide.views.CustomTextView
            android:id="@+id/item_propuestas_menu_tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:text="Hola mundo"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/title_color"
            android:textStyle="bold"
            cide:typefaceRoboto="RobotoSlab_Bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_menu_arrow_dark"
            android:contentDescription="@string/propuesta_name" />

    </LinearLayout>

    <mx.com.factico.cide.views.CustomTextView
        android:id="@+id/item_propuestas_menu_tv_currentvotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"
        android:paddingRight="20dp"
        android:paddingEnd="20dp"
        android:text=""
        cide:typefaceRoboto="SourceSansPro_Regular"
        android:background="@color/hololigth"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</LinearLayout>